<div class="row">
<%= render 'shared/navbaradmin'%>
</div>
  <div class="row">

<div class="col-md-2">
<h2>Banques</h2>
</div>
<div class="col-md-offset-8 col-md-2">
<br>
<%= link_to "Ajouter une Banque", new_bank_path, class: "btn btn-primary round" %>
</div>

<br>
<br>
<br>
<br>

<div class="row">
<div class="col-md-10">
<table class="table table-hover table-condensed">

  <tr>
    <th>Nom</th>
    <th>Adresse</th> 
    <th>Gestion</th>
  </tr>


<% @banks.each do |bank| %>
  <tr>
    <td><%= bank.name %></td>
    <td><%= bank.number_and_street %> <%= bank.zip_code %> <%= bank.city %></td>
<td>
<%= link_to "Éditer", edit_bank_path(bank) %> |
<%= link_to "Supprimer", bank, method: :delete, data: { confirm: "Sûr ? " } %>
</td>
  </tr>
<% end %>
</table>
<%#= will_paginate @banks %>
</div>
<div class="col-md-2">
  <%= form_tag(banks_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Chercher Banque", class: "form-control" %>
    <%= submit_tag "Filtrer", :name => nil, class: "btn btn-primary btn-search btn-size-xs" %>
  <% end %>
</div>
</div>

