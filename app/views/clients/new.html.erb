
<% provide(:title, 'Ajout Client') %>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<h2>Ajouter un client</h2>
<hr>
</div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@client) do |f| %>
      <%#= render 'shared/error_messages_client' %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Nom" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :number_and_street, "NumÃ©ro et rue" %>
      <%= f.text_field :number_and_street, class: 'form-control' %>

      <%= f.label :zip_code, "Code postal" %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <%= f.label :city, "Ville" %>
      <%= f.text_field :city, class: 'form-control' %>

<%= f.submit "Ajoutez client", class: "btn btn-primary" %>

<% end %>

  </div>
</div>


