<div class="row">
<% if logged_in? && current_user.admin? %>
<%= render "shared/navbaradmin"%>
<% else %>
<%= render 'shared/navbaruser' %>
<% end %>
</div>

<div class="row">
<% provide(:title, 'Ajout Client') %>
<div class="col-md-6 col-md-offset-3">
<h2>Ajouter un client</h2>
<hr>
</div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@client) do |f| %>
      <%#= render 'shared/error_messages_client' %>
      <%= render 'shared/error_messages', object: f.object %>
<h8>Information sur votre client</h8>

<br><br>
      <%= f.label :name, "Nom (*)" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :number_and_street, "Numéro et rue (*)" %>
      <%= f.text_field :number_and_street, class: 'form-control' %>

      <%= f.label :zip_code, "Code postal (*)" %>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <%= f.label :city, "Ville (*)" %>
      <%= f.text_field :city, class: 'form-control' %>

<h8>Information sur votre contact client</h8>
<hr>

      <%= f.label :first_name, "Prénom (*)" %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name, "Nom (*)" %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email, "Email (*)" %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :phone_number, "Téléphone (*)" %>
      <%= f.text_field :phone_number, class: 'form-control' %>



      <%= f.submit "Ajoutez client", class: "btn btn-primary" %>
<br><br><h12>(*) Champs obligatoire</h12>
    <% end %>
  </div>
</div>


