
<div class="row">
<% provide(:title, 'Change Travel') %>
<div class="col-md-6 col-md-offset-3">
<h2>Change your travel</h2>
<hr>
</div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :travel, url: travel_path(@travel), method: :patch do |f| %>
      <%= render 'shared/error_messages_travel' %>
      <%#= render 'shared/error_messages', object: f.object %>

      <%= f.label :firstname, "First Name" %>
      <%= f.text_field :firstname, class: 'form-control' %>

      <%= f.label :lastname, "Last Name" %>
      <%= f.text_field :lastname, class: 'form-control' %>

      <%= f.label :whatsapp, "whatsapp" %>
      <%= f.text_field :whatsapp, class: 'form-control' %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :from, "From" %>
      <%= f.text_field :from, class: 'form-control' %>

      <%= f.label :to, "To" %>
      <%= f.text_field :to, class: 'form-control' %>

      <%= f.label :pickuptime, "Pickup time" %>
      <%= f.text_field :pickuptime, class: 'form-control' %>


<%= f.submit "Change travel", class: "btn btn-primary" %>

<% end %>

  </div>
</div>


