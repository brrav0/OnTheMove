 <div class="row">
  <div class="col-md-2 background">
<span class="glyphicon glyphicon-user" aria-hidden="true"></span><span class="user"> <%= current_user.name %></span>
</div>


 <div class="text-right">

<div class="btn-group">
  <button type="button" class="btn btn-primary">Cabinets d'audit</button>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Voir les cabinets d'audit", accountingfirms_path %></li>
    <li><%= link_to "Ajouter un cabinet d'audit", new_accountingfirm_path %></li>
  </ul>
</div>

<div class="btn-group">
  <button type="button" class="btn btn-primary">Banques</button>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Voir les banques", banks_path %></li>
    <li><%= link_to "Ajouter une banque", new_bank_path %></li>
    <li role="separator" class="divider"></li>
    <li><%= link_to "Ajouter un contact banque", new_bankcontact_path %></li>
    <li><%= link_to "Voir vos contacts banque", bankcontacts_path %></li>
  </ul>
</div>


<div class="btn-group">
  <button type="button" class="btn btn-primary">Utilisateurs</button>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Voir les utilisateurs", users_path %></li>
  </ul>
</div>


<div class="btn-group">
  <button type="button" class="btn btn-primary">Clients</button>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><span class="divider"></li>
    <li role="separator" class="divider"></li>
    <li><%= link_to "Ajouter un client", new_client_path %></li>
    <li><%= link_to "Voir les clients", clients_path %></li>
    <li role="separator" class="divider"></li>
    <li><%= link_to "Ajouter un contact client", new_clientcontact_path %></li>
    <li><%= link_to "Voir vos contacts client", clientcontacts_path %></li>
  </ul>
</div>


<div class="btn-group">
  <button type="button" class="btn btn-primary">Comptes</button>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Ajouter un comte", new_bankaccount_path %></li>
    <li><%= link_to "Voir les comptes", bankaccounts_path %></li>
  </ul>
</div>

</div>
