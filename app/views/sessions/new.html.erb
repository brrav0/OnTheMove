
<% provide(:title, "Log in") %>
<h1> Connexion</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Mot de passe" %>
    <%= link_to "(Mot de passe oubliÃ©)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Conserver mon profil pour cet ordinateur</span>
      <% end %>



    <br>  <%= f.submit "Connexion", class: "btn btn-primary" %>
    <% end %>

    <p>Nouvel utilisateur? <%= link_to "Inscrivez-vous!", signup_path %></p>
  </div>
</div>
