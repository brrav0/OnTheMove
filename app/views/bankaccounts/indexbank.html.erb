<div class="row">
<div class="col-md-2 background">
<span class="glyphicon glyphicon-user" aria-hidden="true"></span><span class="user"> <%= @user.name %></span>
</div>
</div>


<div class="row">
<div class="col-md-9">
<h2>Récapitulatif des comptes circularisés</h2>
<hr>
<table class="table table-hover">

  <tr>
    <th>Banque</th>
    <th>Client</th>
    <th>Numéro de compte</th>
    <th>Devise</th>
    <th>Solde</th>
    <th>Action</th>
  </tr>

<% @bankaccounts.each do |bankaccount| %>
  <tr>
    <td><%= bankaccount.bank.name %></td>
    <td><%= bankaccount.client.name %></td>
    <td><%= bankaccount.number %></td>
    <td><%= bankaccount.currency %></td>
    <td><%= bankaccount.balance %></td> 
    <td><%= show_action_depending_on_bankaccount_status(bankaccount) %></td>
  </tr>


<% end %>
</table>



</div>

</div>
