<div class="row">
<% if logged_in? && current_user.admin? %>
<%= render 'shared/navbaradmin' %>
<% else %>
<%= render 'shared/navbaruser' %>
<% end %>
</div>


<% provide(:title, 'Ajouter un compte') %>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<h2>Ajouter un compte</h2>
<hr>
</div>
</div>
<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@bankaccount) do |f| %>
      <%= render 'shared/error_messages', object:f.object %>
      
 
      <%= f.label :bank_id, "Banque" %>
      <%= f.collection_select :bank_id, Bank.all, :id, :name %>

      <%= f.label :client_id, "Client" %>
      <%= f.collection_select :client_id, current_user.clients, :id, :name %>

      <%= f.label :number, "Numéro de compte" %>
      <%= f.text_field :number, class: 'form-control' %>

      <%= f.label :currency, "Devise" %>
      <%= f.text_field :currency, class: 'form-control' %>

      <%= f.label :balance, "Solde" %>
      <%= f.text_field :balance, class: 'form-control' %>


	   <%-# Here is the scan block -%>
	   
	   
		<% if !flash[:notice].blank? %>
		  <div class="alert alert-info">
		  	<%= flash[:notice] %>
		  </div>
		<% end %>
		<br />
			<%= link_to "Attacher nouveau scan de la demande", new_attached_file_path, class: "btn btn-primary" %>
		<br />
		<br />
		<table class="table table-bordered table-striped">
		  <thead>
			<tr>
			  <th>Scan</th>
			  <th>Lien téléchargement</th>
			  <th>&nbsp;</th>
			</tr>
		  </thead>
		  <tbody>
			<% @attachedfiles.each do |attachedfile| %>
			  <tr>
				<td><%= attachedfile.name %></td>
				<td><%= link_to "Télécharger le scan de la demande", attachedfile.attachment_url, class: "btn btn-primary" %></td>
				<td><%= link_to "Supprimer le scan de la demande", attachedfile, method: :delete, class: "btn btn-danger",
                                  data: { confirm: "Are you sure that you wish to delete #{attachedfile.name}?" } %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
  		
<%= f.submit "Ajoutez le compte", class: "btn btn-primary" %>

<% end %>

  </div>
</div>


