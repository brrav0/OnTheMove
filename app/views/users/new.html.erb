  <% provide(:title, 'Inscription') %>


<div class="row">
  <div class="col-md-offset-3 col-md-6">
<h1>Inscription</h1>
<hr>
</div>
</div>
<div class="row">
  <%#- code hereunder create a 3 margin left, a 6-wide form and by default leaves a 3 right margin %>
  <div class="col-md-offset-3 col-md-6">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">      
      <%= f.label :clientcontact, "Vous êtes ?" %>
      <%#= f.text_field :clientcontact, class: 'form-control' %>
      <%= f.select(:clientcontact, options_for_select([['  Commissaire aux comptes (vous souhaitez émettre des circularisations)', false],['  Client (vous souhaitez signer des circularisations)', true]]), class: 'form-control') %>
      </div>
      <div class="form-group">
      <%= f.label :name, "Nom" %>
      <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Créer mon compte", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
