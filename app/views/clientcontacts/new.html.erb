<div class="row">
<% if logged_in? && current_user.admin? %>
<%= render 'shared/navbaradmin' %>
<% else %>
<%= render 'shared/navbaruser' %>
<% end %>

</div>

<div class="row">
<% provide(:title, 'Ajouter un contact client') %>
<div class="col-md-6 col-md-offset-3">
<h2>Ajout un contact client</h2>
<hr>
</div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@clientcontact) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
 
      <%= f.label :client_id, "Client" %>
      <%= f.collection_select :client_id, current_user.clients, :id, :name %>

      <%= f.label :first_name, "PrÃ©nom" %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name, "Nom" %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email, class: 'form-control' %>


<%= f.submit "Ajoutez contact client", class: "btn btn-primary" %>

<% end %>

  </div>
</div>


